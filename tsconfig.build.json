{
    "compilerOptions": {
        "incremental": false,
        "sourceMap": false,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveSymlinks": true
    },
    "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/test", "**/__tests__", "**/node_modules", "**/dist"]
}
